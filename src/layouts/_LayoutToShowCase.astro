---
import GlobalLayout from '@/layouts/GlobalLayout.astro'
import { kebabToPascal } from '@/lib/text'

export interface Props {
  title: string
  description: string
  path: string
}

const { title, description, path } = Astro.props
---

<GlobalLayout title={title} description={description} siteURL={path}>
  <main slot="body">
    <nav class="nav-home">‚Üê<a href="/">HOME</a></nav>
    <h1>
      {kebabToPascal(Astro.url.pathname.split('/').pop())}
    </h1>
    <div class="container">
      <slot name="main" />
    </div>
  </main>
</GlobalLayout>

<style>
  main {
    max-width: 100vw;
    min-height: 100vh;
    background-color: rgb(#000 / 15%);
    background-image: url('/assets/texture/black-paper_38.jpg');
    background-size: cover;
  }

  .nav-home {
    font-size: 1.4rem;
  }

  .container {
    display: grid;
    justify-content: center;
    align-items: center;
    border: 1px solid #000;
    height: 90dvh;
    width: 90dvw;
    margin: 0 auto;
    overflow: auto;
  }
</style>
