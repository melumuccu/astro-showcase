---
import { Icon } from 'astro-icon/components'
---

<button class="search-button open-search-modal-button" type="button">
  <Icon name="material-symbols:search-rounded" width={20} height={20} /><span
    >検索</span
  ></button
>

<style>
  .search-button {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 0.4rem;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    font-weight: bold;
    color: #777;
    border: 1px solid #ababab;
    border-radius: var(--radius);
  }

  .search-button:hover {
    cursor: pointer;
    background-color: #ddd;
  }

  .search-button svg {
    width: 20px;
    height: 20px;
    margin-right: 0.2rem;
  }

  [astro-icon='octicon:search-24'] {
    color: var(--fg);
  }
</style>

<script>
  import { focusFirstEl } from '@/lib/focus.ts'

  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('SearchModal')
    if (modal != null && modal instanceof HTMLDialogElement) {
      // ショートカットキー(Ctrl+K or Cmd+K)で検索モーダル表示
      document.addEventListener('keydown', (e) => {
        if (e.key === 'k' && e.metaKey) {
          modal.showModal()
          focusFirstEl(modal)
        }
      })

      // 検索モーダル表示ボタンクリックで検索モーダル表示
      const buttons = document.querySelectorAll('.open-search-modal-button')
      buttons.forEach((b) => {
        b.addEventListener('click', (e) => {
          modal.showModal()
          focusFirstEl(modal)
        })
      })
    }
  })
</script>
